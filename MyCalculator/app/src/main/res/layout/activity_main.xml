<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/TbResultat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/bt8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btEffacer" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@+id/bt9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt7"
        app:layout_constraintTop_toTopOf="@+id/bt7" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:text="9"
        app:layout_constraintEnd_toStartOf="@+id/btMultiplication"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt8"
        app:layout_constraintTop_toTopOf="@+id/bt8" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/bt5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt7" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/bt6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt4"
        app:layout_constraintTop_toTopOf="@+id/bt4" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:text="6"
        app:layout_constraintEnd_toStartOf="@+id/btSoustraction"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt5"
        app:layout_constraintTop_toTopOf="@+id/bt5" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/bt2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt4" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/bt3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt1"
        app:layout_constraintTop_toTopOf="@+id/bt1" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@+id/btAddition"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt2"
        app:layout_constraintTop_toTopOf="@+id/bt2" />

    <Button
        android:id="@+id/bt0"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/btEgal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt1" />

    <Button
        android:id="@+id/btEgal"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:text="="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt0"
        app:layout_constraintTop_toTopOf="@+id/bt0" />

    <Button
        android:id="@+id/btAddition"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt3"
        app:layout_constraintTop_toTopOf="@+id/bt3" />

    <Button
        android:id="@+id/btSoustraction"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt6"
        app:layout_constraintTop_toTopOf="@+id/bt6" />

    <Button
        android:id="@+id/btMultiplication"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:text="x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt9"
        app:layout_constraintTop_toTopOf="@+id/bt9" />

    <Button
        android:id="@+id/btDivision"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btRatio"
        app:layout_constraintTop_toTopOf="@+id/btRatio" />

    <Button
        android:id="@+id/btRatio"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:text="%"
        app:layout_constraintEnd_toStartOf="@+id/btDivision"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btEffacer"
        app:layout_constraintTop_toTopOf="@+id/btEffacer" />

    <Button
        android:id="@+id/btEffacer"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:layout_marginTop="32dp"
        android:text="AC/C"
        app:layout_constraintEnd_toStartOf="@+id/btRatio"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TbResultat" />

</android.support.constraint.ConstraintLayout>